<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".detail.fasilitas.DetailFasilitasActivity"
        android:id="@+id/swipe_detail_fasilitas">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_detail_fasilitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_kosong_detail_fasilitas"
                android:layout_centerInParent="true"
                android:text="Tidak Ada Data"
                android:textStyle="bold"
                android:drawableTop="@drawable/empty"
        />

        <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progress_bar_detail_fasilitas"
                android:layout_centerInParent="true"/>
    </RelativeLayout>

</android.support.v4.widget.SwipeRefreshLayout>